% Define UB colors
\definecolor{UBPurple}{HTML}{592D82}
\definecolor{UBBlack}{HTML}{000000}
\definecolor{UBLightGray}{HTML}{E4E4E4}
\definecolor{UBWhite}{HTML}{FFFFFF}

% Background and foreground
\setbeamercolor{background canvas}{bg=UBWhite}
\setbeamercolor{normal text}{fg=UBBlack}
\setbeamercolor{alerted text}{fg=UBPurple}

% Title and sections
\setbeamercolor{frametitle}{fg=UBWhite, bg=UBAustinOrange}
\setbeamercolor{title}{fg=UBWhite, bg=UBLightGray}
\setbeamercolor{section in toc}{fg=UBPurple, bg=UBLightGray}

% Blocks
\setbeamercolor{block title}{fg=UBWhite, bg=UBPurple}
\setbeamercolor{block body}{fg=UBBlack, bg=UBLightGray}
\setbeamercolor{block title example}{fg=UBWhite, bg=UBBlack}
\setbeamercolor{block body example}{fg=UBBlack, bg=UBWhite}

% Itemize, enumerate, etc.
\setbeamercolor{item projected}{bg=UBPurple, fg=UBWhite}
\setbeamercolor{enumerate item}{fg=UBPurple}

% Navigation symbols (optional)
\setbeamercolor{navigation symbols dimmed}{fg=UBBlack}
\setbeamercolor{navigation symbols}{fg=UBPurple}

% Additional styling
\setbeamercolor{subsection in toc}{fg=UBBlack, bg=UBLightGray}
\setbeamercolor{frametitle continuation}{fg=UBWhite, bg=UBBlack}

% Footer and headline
\setbeamercolor{headline}{fg=UBWhite, bg=UBPurple}
\setbeamercolor{footline}{fg=UBWhite, bg=UBBlack}
\setbeamercolor{title in head/foot}{fg=UBWhite, bg=UBLightGray}
\setbeamercolor{author in head/foot}{fg=UBWhite, bg=UBBlack}

